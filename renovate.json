{
    "extends": [
      "config:base",
      ":autodiscover"
    ],
    "automerge": true,
    "automergeType": "branch",
    "packageRules": [
      {
        "depTypeList": ["dependencies", "devDependencies"],
        "updateTypes": ["minor", "patch"],
        "schedule": ["before 5am on Monday"]
      },
      {
        "depTypeList": ["dependencies"],
        "updateTypes": ["major"],
        "rangeStrategy": "bump"
      }
    ]
}
