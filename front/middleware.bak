
import { NextRequest, NextResponse } from "next/server";

export async function middleware(request: NextRequest) {
  const url = request.nextUrl.clone();

  if (url.pathname.startsWith('/grafana')) {
    console.log('Request to Grafana API');
    const newResponse = NextResponse.next();

    // Set CORS headers
    newResponse.headers.set('Access-Control-Allow-Origin', '*'); // Allow all origins, change if needed
    newResponse.headers.set('Access-Control-Allow-Methods', 'GET, POST, PUT, DELETE, OPTIONS');
    newResponse.headers.set('Access-Control-Allow-Headers', 'Content-Type, Authorization');

    // Handle preflight request
    if (request.method === 'OPTIONS') {
      return newResponse;
    }

    return newResponse;
  }

  return NextResponse.next(); // Default response for other routes
}
